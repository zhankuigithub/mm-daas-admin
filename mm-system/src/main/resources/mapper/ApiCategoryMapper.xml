<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mm.system.mapper.ApiCategoryMapper">

    <resultMap type="com.mm.system.domain.ApiCategoryPO" id="ApiCategoryResult">
        <result property="id"    column="id"    />
        <result property="categoryName"    column="category_name"    />
        <result property="categoryType"    column="category_type"    />
        <result property="categorySort"    column="category_sort"    />
        <result property="createTime"    column="create_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="updateBy"    column="update_by"    />
    </resultMap>

    <sql id="Base_Column_List">
         id, category_name, category_type, category_sort, create_time, create_by, update_time, update_by
    </sql>

    <select id="nameExist" resultType="long">
        select
            id
        from
            api_category
        where
            category_name = #{name}
            <if test=" excludeId != null ">
             and  id != #{excludeId}
            </if>
        limit 1
    </select>

</mapper>
