<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mm.system.mapper.PlatformApplicationMapper">

    <resultMap type="com.mm.system.domain.PlatformApplicationPO" id="PlatformApplicationResult">
        <result property="id"    column="id"    />
        <result property="appName"    column="app_name"    />
        <result property="appPwd"    column="app_pwd"    />
        <result property="appAccount"    column="app_account"    />
        <result property="appType"    column="app_type"    />
        <result property="appOwner"    column="app_owner"    />
        <result property="appEmail"    column="app_email"    />
        <result property="createTime"    column="create_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="updateBy"    column="update_by"    />
    </resultMap>

    <sql id="Base_Column_List">
        id, app_name, app_account, app_type, app_owner, app_email, create_time, create_by, update_time, update_by
    </sql>
    <select id="nameExist" resultType="java.lang.Long">
        select
            id
        from
            platform_application
        where
            app_name = #{name}
        <if test=" excludeId != null ">
            and id != #{excludeId}
        </if>
            limit 1
    </select>

</mapper>
